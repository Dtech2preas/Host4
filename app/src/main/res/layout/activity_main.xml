<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000">

    <!-- WebView Container -->
    <FrameLayout
        android:id="@+id/webview_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#000000"
        android:padding="4dp">

        <!-- Controls Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/back"
                android:backgroundTint="#000000"
                android:textColor="#00FFFF"
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/btn_forward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/forward"
                android:backgroundTint="#000000"
                android:textColor="#00FFFF"
                style="?android:attr/buttonBarButtonStyle" />

            <EditText
                android:id="@+id/et_url"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="https://..."
                android:inputType="textUri"
                android:imeOptions="actionGo"
                android:singleLine="true"
                android:background="#333333"
                android:textColor="#00FFFF"
                android:textColorHint="#888888"
                android:padding="8dp" />

            <Button
                android:id="@+id/btn_go"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/go"
                android:backgroundTint="#000000"
                android:textColor="#00FFFF"
                style="?android:attr/buttonBarButtonStyle" />
        </LinearLayout>

        <!-- Tools Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="4dp">

            <Button
                android:id="@+id/btn_tabs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tabs"
                android:backgroundTint="#000000"
                android:textColor="#00FFFF"
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/btn_desktop_toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PC Mode"
                android:backgroundTint="#000000"
                android:textColor="#00FFFF"
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/btn_download_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Download Video"
                android:visibility="gone"
                android:backgroundTint="#000000"
                android:textColor="#00FFFF"
                style="?android:attr/buttonBarButtonStyle" />

            <TextView
                android:id="@+id/tv_ads_blocked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Ads Blocked: 0"
                android:textColor="#00FFFF"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
